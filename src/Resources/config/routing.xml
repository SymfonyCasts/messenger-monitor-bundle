<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="symfonycasts.messenger_monitor.dashboard" path="/">
        <default key="_controller">symfonycasts.messenger_monitor.controller.dashboard</default>
    </route>

    <route id="symfonycasts.messenger_monitor.retry_failed_message" path="/failed-message/retry/{id}">
        <default key="_controller">symfonycasts.messenger_monitor.controller.retry_failed_message</default>
    </route>

    <route id="symfonycasts.messenger_monitor.reject_failed_message" path="/failed-message/reject/{id}">
        <default key="_controller">symfonycasts.messenger_monitor.controller.reject_failed_message</default>
    </route>
</routes>
