<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Storage -->
        <service id="karo-io.messenger_monitor.storage.doctrine_connection" class="KaroIO\MessengerMonitorBundle\Storage\DoctrineConnection">
            <factory service="karo-io.messenger_monitor.storage.doctrine_connection_factory"/>
        </service>

        <service id="karo-io.messenger_monitor.storage.doctrine_connection_factory" class="KaroIO\MessengerMonitorBundle\Storage\DoctrineConnectionFactory">
            <argument type="service" id="doctrine" />
            <argument /> <!-- Doctrine's connection name -->
            <argument /> <!-- Doctrine's table name -->
        </service>

        <!-- EventListeners -->
        <service id="karo-io.messenger_monitor.listener.store_in_doctrine" class="KaroIO\MessengerMonitorBundle\EventListener\StoreInDoctrineOnMessageSentListener">
            <argument type="service" id="karo-io.messenger_monitor.storage.doctrine_connection" />
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="karo-io.messenger_monitor.listener.update_doctrine" class="KaroIO\MessengerMonitorBundle\EventListener\UpdateInDoctrineListener">
            <argument type="service" id="karo-io.messenger_monitor.storage.doctrine_connection" />
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
