<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="karo-io.controller.main" class="KaroIO\MessengerMonitorBundle\Controller\MessengerMonitorController" public="true">
            <tag name="controller.service_arguments" />
            <argument type="service" id="twig" />
            <argument type="service" id="karo-io.messenger_monitor.receiver_locator" />
            <argument type="service" id="karo-io.messenger_monitor.failed_message_repository" />
        </service>

        <service id="karo-io.messenger_monitor.receiver_locator" class="KaroIO\MessengerMonitorBundle\Locator\ReceiverLocator">
            <argument type="service" id="messenger.receiver_locator" />
            <argument /> <!-- Receiver names -->
        </service>

        <service id="karo-io.messenger_monitor.failure_transport_locator" class="KaroIO\MessengerMonitorBundle\Locator\FailureTransportLocator">
            <argument type="service" id="messenger.receiver_locator" />
            <argument /> <!-- Failure transport name -->
        </service>

        <service id="karo-io.messenger_monitor.monitor_command" class="KaroIO\MessengerMonitorBundle\Command\MonitorCommand">
            <argument>messenger:monitor</argument>
            <argument type="service" id="karo-io.messenger_monitor.receiver_locator" />
            <tag name="console.command"/>
        </service>

        <service id="karo-io.messenger_monitor.failed_message_repository" class="KaroIO\MessengerMonitorBundle\FailedMessage\FailedMessageRepository">
            <argument type="service" id="karo-io.messenger_monitor.failure_transport_locator" />
        </service>
    </services>
</container>
